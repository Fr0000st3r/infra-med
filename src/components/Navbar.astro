<nav id="navbar" class="bg-white py-4 shadow-sm">
    <div class="max-container flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3">
            <img
                src="https://res.cloudinary.com/db5aa33ix/image/upload/v1770669326/infra_med/logo-infraestructura-medica_copexw.png"
